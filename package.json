{
  "name": "ohmyposh-configurator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "ohmyposh-mcp": "./dist/mcp/index.js"
  },
  "files": [
    "dist/mcp/",
    "public/segments/",
    "public/configs/"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && node scripts/minify-json.js dist",
    "build:mcp": "npm run build:mcp-apps && tsc -p mcp/tsconfig.json",
    "build:mcp-apps": "MCP_APP=preview vite build --config mcp/vite.apps.config.ts && MCP_APP=segments vite build --config mcp/vite.apps.config.ts",
    "mcp": "npm run build:mcp && node dist/mcp/index.js",
    "minify": "node scripts/minify-json.js public",
    "format:json": "node scripts/format-json.js public",
    "lint": "eslint .",
    "preview": "vite preview",
    "validate": "node scripts/validate-configs.js && node scripts/validate-icons.js",
    "validate-icons": "node scripts/validate-icons.js",
    "generate-font-subset": "node scripts/generate-font-subset.js",
    "generate:official-themes": "node scripts/fetch-official-themes.mjs",
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@tailwindcss/vite": "^4.1.8",
    "idb-keyval": "^6.2.2",
    "js-yaml": "^4.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.8",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "ls": "^0.2.1",
    "npm": "^11.10.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.4.1",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.16"
  }
}
