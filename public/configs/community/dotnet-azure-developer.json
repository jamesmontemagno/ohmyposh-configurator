{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "final_space": true,
  "palette": {
    "text-light": "#ffffff",
    "text-dark": "#000000",
    "azure-bg": "#0078d4",
    "dotnet-bg": "#512bd4",
    "git-bg": "#16c60c",
    "git-modified-bg": "#ffca00",
    "azfunc-bg": "#ffd800",
    "docker-bg": "#0db7ed",
    "exectime-bg": "#8a3ffc",
    "prompt-ok": "#16c60c",
    "prompt-error": "#e81123"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:azure-bg",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": " \uf2bd {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:dotnet-bg",
          "template": " \uf07c {{ .Path }} ",
          "options": {
            "style": "folder",
            "max_depth": 3
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:git-bg",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:text-dark{{ end }}"
          ],
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:git-modified-bg{{ end }}"
          ],
          "template": " \uf126 {{ .HEAD }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "options": {
            "fetch_status": true
          }
        },
        {
          "type": "dotnet",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:dotnet-bg",
          "template": " \ue77f {{ .Full }} "
        },
        {
          "type": "azfunc",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:azfunc-bg",
          "template": " \uf0e7 {{ .Full }} "
        },
        {
          "type": "az",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:azure-bg",
          "template": " \uebd8 {{ .EnvironmentName }} "
        },
        {
          "type": "docker",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:docker-bg",
          "template": " \uf308 {{ .Context }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:exectime-bg",
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b4",
          "template": " \uf252 {{ .FormattedMs }} ",
          "options": {
            "threshold": 500,
            "style": "roundrock"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:prompt-ok",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:prompt-error{{ end }}"
          ],
          "template": "\u276f ",
          "options": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
