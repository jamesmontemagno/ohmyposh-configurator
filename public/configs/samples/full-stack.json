{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "final_space": true,
  "palette": {
    "text-light": "#ffffff",
    "text-dark": "#111111",
    "path-bg": "#ff8a65",
    "git-bg": "#ffb74d",
    "node-bg": "#68a063",
    "react-bg": "#61dafb",
    "python-bg": "#ffde57",
    "dotnet-bg": "#512bd4",
    "docker-bg": "#0db7ed",
    "exectime-bg": "#8b5cf6",
    "prompt-ok": "#e0f8ff",
    "prompt-error": "#ff5370"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:path-bg",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .Path }} ",
          "options": {
            "style": "folder",
            "max_depth": 3
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:git-bg",
          "template": " \uf126 {{ .HEAD }} "
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:node-bg",
          "template": " \uf898 {{ .Full }} "
        },
        {
          "type": "react",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:react-bg",
          "template": " \ue7ba {{ .Full }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-dark",
          "background": "p:python-bg",
          "template": " \ue235 {{ .Full }} "
        },
        {
          "type": "dotnet",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:dotnet-bg",
          "template": " \ue77f {{ .Full }} "
        },
        {
          "type": "docker",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:docker-bg",
          "template": " \uf308 "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:exectime-bg",
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b4",
          "template": " \uf252 {{ .FormattedMs }} ",
          "options": {
            "threshold": 500
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:prompt-ok",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:prompt-error{{ end }}"
          ],
          "template": "\u276f ",
          "options": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
