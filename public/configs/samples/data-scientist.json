{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "final_space": true,
  "palette": {
    "text-light": "#ffffff",
    "text-dark": "#111111",
    "session-bg": "#29315a",
    "path-bg": "#3a86ff",
    "git-bg": "#8338ec",
    "python-bg": "#ffbe0b",
    "r-bg": "#2a7fff",
    "julia-bg": "#9558b2",
    "time-bg": "#fb5607",
    "prompt": "#06d6a0"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:session-bg",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:path-bg",
          "template": " \uf07c {{ .Path }} ",
          "options": {
            "style": "folder",
            "max_depth": 2
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:git-bg",
          "template": " \uf126 {{ .HEAD }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-dark",
          "background": "p:python-bg",
          "template": " \ue235 {{ if .Venv }}({{ .Venv }}) {{ end }}{{ .Full }} "
        },
        {
          "type": "r",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:r-bg",
          "template": " \ue67c {{ .Full }} "
        },
        {
          "type": "julia",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:julia-bg",
          "template": " \ue624 {{ .Full }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:time-bg",
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b4",
          "template": " \uf017 {{ .CurrentDate | date \"15:04:05\" }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:prompt",
          "template": "$ "
        }
      ]
    }
  ]
}
