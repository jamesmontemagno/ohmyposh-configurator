{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "final_space": true,
  "palette": {
    "text-light": "#ffffff",
    "time-bg": "#ff6b6b",
    "path-bg": "#4ecdc4",
    "git-bg": "#3fb8af",
    "spotify-bg": "#1DB954",
    "prompt": "#e4f9f5"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "time",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:time-bg",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": " \uf017 {{ .CurrentDate | date \"15:04\" }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:path-bg",
          "template": " \uf07c {{ .Path }} ",
          "options": {
            "style": "folder",
            "max_depth": 2
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:git-bg",
          "template": " \uf126 {{ .HEAD }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "spotify",
          "style": "diamond",
          "foreground": "p:text-light",
          "background": "p:spotify-bg",
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "\ue0b4",
          "template": " \uf1bc {{ if ne .Status \"stopped\" }}{{ .Artist }} - {{ .Track }}{{ end }} ",
          "options": {
            "playing_icon": "\uf04b ",
            "paused_icon": "\uf04c ",
            "stopped_icon": "\uf04d "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:prompt",
          "template": "\u279c "
        }
      ]
    }
  ]
}
