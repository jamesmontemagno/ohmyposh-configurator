{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "final_space": true,
  "palette": {
    "path": "#61AFEF",
    "git": "#98C379",
    "status-ok": "#56B6C2",
    "status-error": "#E06C75"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:path",
          "template": "{{ .Path }} ",
          "options": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:git",
          "template": "on \uf126 {{ .HEAD }} "
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:status-ok",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:status-error{{ end }}"
          ],
          "template": "{{ if gt .Code 0 }}\u2717{{ else }}\u2713{{ end }} ",
          "options": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
